<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alessio.project2.Scorekeeper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="14dp"
                android:text="Chest"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/LeftTop"
                style="@style/counter" />

            <Button
                android:id="@+id/LeftTopBtn"
                style="@style/increment_button"
                android:layout_width="match_parent"
                android:text="Barbell bench press\n4x10" />

            <TextView
                android:id="@+id/LeftCenter"
                style="@style/counter" />

            <Button
                android:id="@+id/LeftCenterBtn"
                style="@style/increment_button"
                android:layout_width="match_parent"
                android:text="Incline dumbell press\n4x10" />

            <TextView
                android:id="@+id/LeftBottom"
                style="@style/counter" />

            <Button
                android:id="@+id/LeftBottomBtn"
                style="@style/increment_button"
                android:layout_width="match_parent"
                android:text="Pec Deck Press\n4x10" />

            <Button
                android:id="@+id/LeftReset"
                style="@style/reset_button"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="14dp"
                android:text="Chest"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/RightTop"
                style="@style/counter" />

            <Button
                android:id="@+id/RightTopBtn"
                style="@style/increment_button"
                android:layout_width="match_parent"
                android:text="Barbell curl\n4x10" />

            <TextView
                android:id="@+id/RightCenter"
                style="@style/counter" />

            <Button
                android:id="@+id/RightCenterBtn"
                style="@style/increment_button"
                android:layout_width="match_parent"
                android:text="Standing cable curl\n4x10" />

            <TextView
                android:id="@+id/RightBottom"
                style="@style/counter" />

            <Button
                android:id="@+id/RightBottomBtn"
                style="@style/increment_button"
                android:layout_width="match_parent"
                android:text="Concentration curl\n4x10" />

            <Button
                android:id="@+id/RightReset"
                style="@style/reset_button"
                android:layout_width="match_parent" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>