<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="increment_button">
        <!--<item name="android:background">@color/colorPrimaryHalfDark</item>-->
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">28dp</item>
        <item name="android:onClick">increment</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_width">128dp</item>
    </style>

    <style name="reset_button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">done!</item>
        <item name="android:padding">28dp</item>
        <item name="android:onClick">reset</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="counter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
